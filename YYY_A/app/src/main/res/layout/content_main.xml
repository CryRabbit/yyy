<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <android.support.v4.view.ViewPager
        android:id="@+id/vaper"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            style="@style/main_tab_item"
            android:id="@+id/main_text_frist"
            android:drawableTop="@drawable/tab_main_test_one"
            android:text="首页"/>
        <TextView
           style="@style/main_tab_item"
            android:id="@+id/main_text_heihei"
            android:drawableTop="@drawable/tab_main_text_two"
            android:text="嘿嘿"/>
        <TextView
            style="@style/main_tab_item"
            android:id="@+id/main_text_miaomiao"
            android:drawableTop="@drawable/tab_main_text_three"
            android:text="喵喵"/>
        <TextView
            style="@style/main_tab_item"
            android:id="@+id/main_text_mine"
            android:drawableTop="@drawable/tab_main_text_four"
            android:text="我的"/>
    </LinearLayout>
</LinearLayout>